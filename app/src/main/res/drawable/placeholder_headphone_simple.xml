<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5F5" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Left Ear Cup -->
    <item android:gravity="left|center_vertical" android:left="20dp">
        <shape android:shape="oval">
            <solid android:color="#FF4CAF50" />
            <size android:width="30dp" android:height="40dp" />
        </shape>
    </item>
    <!-- Right Ear Cup -->
    <item android:gravity="right|center_vertical" android:right="20dp">
        <shape android:shape="oval">
            <solid android:color="#FF4CAF50" />
            <size android:width="30dp" android:height="40dp" />
        </shape>
    </item>
</layer-list>
